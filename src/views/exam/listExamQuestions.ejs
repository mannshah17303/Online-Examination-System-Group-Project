<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam Create</title>
    <link rel="stylesheet" href="/css/exam/listExamQuestions.css">
</head>

<body>
    <a href="#" class="previous1 round" onclick="goBack(event)">&#8249;</a>
    <!-- <input type="button" class="previous round" value="&#8249;"> -->
    <div class="container">
        
        <div id="he">
            <div id="heading">
                <h3 id="exam-name">

                </h3>
            </div>
            <!-- <div id="line"></div> -->


            <div class="category-select">

                <div>
                    <label for="category" style="color: #31356e;">Select Question Category:</label>
                    <select name="category" id="category"></select>
                </div>
                <div>
                    <label for="question-type" style="color: #31356e;">Question Type:</label>
                    <select name="question-type" id="question-type">
                        <option value="all" selected>All</option>
                        <option value="Subjective">Subjective</option>
                        <option value="MCQ">MCQ</option>

                    </select>


                </div>


            </div>
            <div class="total-marks">
                <p>Total Marks : <span id="total-marks">0</span></p>
            </div>
        </div>
        <div class="question-container">
            <div class="question-type">

            </div>
            <div class="question-list" id="question-list">

            </div>

        </div>
        <div class="action-button">
            <input type="button" value="Save" onclick="saveQuestions()" id="save">
            <a href="#" id="next" onclick="return alert('Please save changes')">Next</a>
        </div>
    </div>
    <script>
        var examId = `<%= examId %>`; 
        console.log(examId);
    </script>
    <script src="/javascript/exam/listExamQuestions.js"></script>

</body>

</html>