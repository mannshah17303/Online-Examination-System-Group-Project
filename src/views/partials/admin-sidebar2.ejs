        </ul>
      </div> -->
      <a href="/admin/manageExam" id="manageLink">Manage Exam</a>
      <a href="/admin/category" class="manage-link" id="manageCategoryLink"
        >Manage Category</a
      >

      <a href="/admin/result" id="result">Result</a>
      <a href="/admin/batch" id="batch_sidebare">Manage Students</a>
      <a href="/admin/profile" id="manageLink2">Manage Profile</a>
      <div class="logout-div">
        <hr style="width: 90%" />
        <button class="logout" id="logout" onclick="logout()">LOGOUT</button>
      </div>
    </div>

    <script>
      async function logout() {
        // console.log("logout");
        // console.log(document.cookie);

        let res = await fetch("/admin/logout");
        location.href = "/admin/login";
      }
      function addCss(id) {
        document.getElementById(id).style.backgroundColor = "#304673";
        document.getElementById(id).style.borderRadius = "5px";
        document.getElementById(id).style.color = "#fff";
      }
      function url() {
        // console.log(location.href);
        let url2 = location.href.toLowerCase();
        if (url2.includes("dashboard")) {
          addCss("dashboard");
        } else if (url2.includes("exam") || url2.includes("assessment")) {
          addCss("manageLink");
        } else if (url2.includes("category")) {
          addCss("manageCategoryLink");
        } else if (url2.includes("profile")) {
          addCss("manageLink2");
        } else if (url2.includes("result")) {
          addCss("result");
        } else if (url2.includes("batch")) {
          addCss("batch_sidebare");
        }
      }
      url();
    </script>
  </body>
</html>
